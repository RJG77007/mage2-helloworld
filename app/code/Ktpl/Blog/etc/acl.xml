        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Ktpl_Blog::blog" title="Simple Blog" sortOrder="100">
                    <resource id="Ktpl_Blog::add_blog" title="Add Blog"  sortOrder="1" />
                    <resource id="Ktpl_Blog::manage_blog" title="Manage Blog" sortOrder="2" />
                    <resource id="Ktpl_Blog::configuration" title="Configurations" sortOrder="3" />
